<div>
	<h1>Welcome, <%=@user.username%></h1>

	<br>

	<form action='/diets/new' method="get">
		<input type="submit" name="new_diet" id="new_diet" value="Add New Diet">
	</form>

	<br>

	<form action='/foods/new' method="get">
		<input type="submit" name="new_food" id="new_food" value="Add New Food">
	</form>

	
	<br>

	<h3>Your Diets:</h3>

	<%@user.diets.each do |diet| %>

		<h5><a href="/diets/<%=diet.id%>"><%=diet.date%> - <%=diet.id%></a></h5>

	<%end%>



</div>
