<div>

<h1><%=@diet.date%></h1>

<%@diet.meals.each do |meal| %>

	<h3><a href="/meals/<%=meal.id%>/edit">Meal:<%=meal.name.upcase%></a></h3> 
		
		<%meal.unique_foods_list.each do |food| %>
		
			<%=meal.foods.select{|f| food == f}.count%> x <%=food.name%> (<%=food.serving_size%>)
			<br><br>
		<%end%>

	<form action="/meals/<%=meal.id%>/delete" method="post">
		<input type="hidden" name="_method"  value="delete">
		<input type="hidden" name="diet_id" value="<%=@diet.id%>">
