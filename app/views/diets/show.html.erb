	<input type="hidden" name="diet_id" value="<%=@diet.id%>">
	<input type="submit" name="submit" value="Add Meal">
</form>

<br>
<br>
<br>

<form action="/diets/<%=@diet.id%>/edit" method="post">
	<input type="submit" name="Edit Diet" value="Edit Diet">
</form>

<br> 

